-- player
plx = 42
ply = 24
plr = 3

function _update()
	-- read input
	local dx = tonum(btn(1))-tonum(btn(0))
	local dy = tonum(btn(3))-tonum(btn(2))
	-- move
	plx += dx*2
	ply += dy*2
	-- stay inside boundaries
	plx = mid(plr,84-1-plr, plx)
	ply = mid(plr,48-1-plr, ply)
end

